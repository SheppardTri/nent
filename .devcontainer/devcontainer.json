// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.183.0/containers/typescript-node
{
  "name": "Node.js & TypeScript",
  "build": {
    "dockerfile": "Dockerfile",
    // Update 'VARIANT' to pick a Node version: 12, 14, 16
    "args": {
      "VARIANT": "16"
    }
  },
  // Set *default* container specific settings.json values on container create.
  "settings": {},
  // Add the IDs of extensions you want installed when the container is created.
  "extensions": [
    "formulahendry.github-actions",
    "editorconfig.editorconfig",
    "streetsidesoftware.code-spell-checker",
    "orta.vscode-jest",
    "ldez.ignore-files",
    "dbaeumer.vscode-eslint",
    "rvest.vs-code-prettier-eslint",
    "natemoo-re.vscode-stencil-tools",
    "sissel.markdown-script-tag",
    "salbert.comment-ts",
    "adam-bender.commit-message-editor",
    "joshbolduc.commitlint",
    "knisterpeter.vscode-github",
    "codezombiech.gitignore",
    "znck.grammarly",
    "blackmist.linkcheckmd",
    "wix.vscode-import-cost",
    "kavod-io.vscode-jest-test-adapter",
    "sissel.json-script-tag",
    "yzhang.markdown-all-in-one",
    "nent.nent"
  ],
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    3002,
    5000
  ],
  "mounts": [
    "source=dind-var-lib-docker,target=/var/lib/docker,type=volume",
    "source=${env:HOME}${env:USERPROFILE}/.docker,target=/home/vscode/.docker,type=bind",
    "source=${env:HOME}${env:USERPROFILE}/.config,target=/home/vscode/.config,type=bind"
  ],
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "yarn install",
  // Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
  "remoteUser": "node"
}
