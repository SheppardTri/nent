{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "WebWorker"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": [
      "vite-plugin-pwa/client"
    ],
    "outDir": "public/dist",
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "__mocks__",
    "coverage",
    "*.config.js",
    "*.babel.js",
    "specs"
  ],
}
